<%=content_for :subtitle do%>
  <h3><%= @user.name %>'s Dashboard</h3>
<%end%>

<%= render 'partials/discover_button' %>

<div id='user-parties' style='width:100%; overflow-x: scroll; display: flex'>
  <% @user.parties.each_with_index do |party, index| %>
    <div class='party-card' id='party-<%=party.id%>'style='float: left; margin: 15px'>
      
      <div class="poster">
        <img src="https://image.tmdb.org/t/p/original<%=@parties_info[index].img_path%>" style='width:150px'>
      </div>

      <p class='title'> <%= @parties_info[index].title %></p>
      <p><%= party.date.strftime("%B %e, %Y") %></p>
      <p><%= party.start_time.strftime("%l:%M %P") %></p>

      <!-- insert more movie info code here:
      working title and user party status -->

    </div>
  <% end %>
</div>
