<%=content_for :subtitle do%>
  <h3><%=@subtitle%></h3>
<%end%>
<%= render 'partials/discover_button'%>


<table id='movie-table' class='center'>
  <tr>
    <th>Title</th>
    <th>Rating</th>
  </tr>
  <%@movies.each do |movie|%>
  <tr class='movie' id='mov-<%=movie.id%>'>
    <td class='title'>
      <%= link_to movie.title, "/users/#{@user.id}/movies/#{movie.id}"%>
    </td>
    <td class='rating'>
      <%= movie.vote_avg %>
    </td>
  </tr>
  <%end%>
</table>
<div class='container center'>
  <div class='result-pagination'>
    <%= button_to '<<<', user_movies_path(@user), method: :get, params: {q: @params[:q], page: @params[:page].to_i - 1}, :disabled => @params[:page].to_i == 1%>
    <%= @params[:page] %> 
    <%= button_to '>>>', user_movies_path(@user), method: :get, params: {q: @params[:q], page: @params[:page].to_i + 1}%>
  </div>
</div>

